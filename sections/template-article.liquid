<article class="py-5">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">
            {{ blog.title }}
          </a>
          <div class="text-4xl md:text-6xl font-medium">
            <h1>
              {{ article.title }}
            </h1>
          </div>
        </div>
      </div>

      {% when 'article_author' %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_author %}
            <p class="content__author">
              <span>
                By
              </span>
              {{ article.author }}
            </p>
          {% endif %}
        </div>
      </div>

      {% when 'article_published_date' %}
      {% if section.settings.enable_published_date %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            <time datetime="{{ article.published_at | date: "%a, %b %d, %y" }}">
              <span>
                On
              </span>
              {{ article.published_at | date: "%a, %b %d, %y" }}
            </time>
          </div>
        </div>
      {% endif %}
      {% when 'article_thumbnail_image' %}
      <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md-2 md:mx-auto overflow-hidden my-4">
        {% if article.image %}
          <img src="{{ article.image | img_url: '1600x1050' }}" alt="{{ article.image.alt }}" />
        {% else %}
          {% assign placeholder_image = 'lifestyle-2' %}
          {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p5' }}
        {% endif %}
      </div>

      {% when 'article_content' %}
      <div class="flex items-center justify-center my-4">
        <div class="max-w-7xl">
          {{ article.content }}

        </div>
      </div>
    {% endcase %}
  {% endfor %}
</article>

{% schema %}
  {
    "name": "Template article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_published_date",
        "label": "Enable Published Date",
        "default": true
      }, {
        "type": "checkbox",
        "id": "enable_author",
        "label": "Enable Author",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published date",
        "limit": 1
      },
      {
        "type": "article_thumbnail_image",
        "name": "Thumnail image",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}