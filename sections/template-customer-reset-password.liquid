<div class="h-full flex item-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="text-center text-3xl font-bold mt-6">
        Reset your password
      </h2>
    </div>

    <div class="mt-8">
      <label for=""></label>
      {% form 'reset_customer_password' %}

        <!--show form errors-->
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3">
            <strong class="font-bold">Error</strong>
            <p class="block sm:inline">
              {{ form.errors | default_errors }}
            </p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="password" class="sr-only">New password</label>
          <input
            type="password"
            value=""
            name="customer[password]"
            id="password"
            placeholder="Password"
            class="w-full px-3 py-2 border">
        </div>
        <div class="my-2">

          <label for="password_confirmation" class="sr-only">Confirm new password</label>
          <input
            type="password"
            value=""
            name="customer[password_confirmation]"
            placeholder="Confirm password"
            id="password_confirmation"
            class="w-full px-3 py-2 border">
        </div>

        <div class="my-2">
          <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
            Reset password
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>