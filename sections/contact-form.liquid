<div class="flex flex-col items-center my-8">
  {% form 'contact' %}
    {% if form.errors %}
      <div class="border p-5">
        <div class="flex flex-row items-center w-full my-3">
          <div class="text-red-500">
            {% render 'icon-failed' %}
          </div>
          <div class="text-sm font-medium ml-3">
            Whoops! Your message was not sent successfully.
          </div>
        </div>
        <ul class="px-4 mb-3 ml-7 list-decimal">
          {% for error in form.errors %}
            <li>
              <span>
                {{ form.errors.messages[error] }}
              </span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full my-3 p-5">
        <div class="text-green-500">
          {% render 'icon-success' %}
        </div>
        <div class="textsm font-medium ml-3">
          Your message has been sent successfully
        </div>
      </div>
    {% endif %}
    <div class="max-w-6-xl mx-auto justify-center flex-1 items-center px-4">
      {% if section.settings.title != blank %}
        <div class="flex px-1 mb-3 justify-center">
          <div class="py-5">
            <h2 class="text-3xl font-medium">
              {{ section.settings.title }}
            </h2>
          </div>
        </div>
      {% endif %}

      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label for="contact_name" class="uppercase text-sm text-gray-500 font-medium">Name</label>
          <input
            type="text"
            name="contact[name]"
            id="contact_name"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>
        <div class="px-3 md:w-1/2">
          <label for="contact_email" class="uppercase text-sm text-gray-500 font-medium">Email address</label>
          <input
            type="email"
            name="contact[email]"
            id="contact_email"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <label for="contact_message" class="uppercase text-sm text-gray-500 font-medium">Message</label>
          <textarea
            name="contact[body]"
            id="contact_message"
            class="border py-3 px-4 mb-3 text-gray-700 w-full"></textarea>
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <input
            type="submit"
            value="Submit message"
            class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700">
        </div>
      </div>
    </div>

  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}