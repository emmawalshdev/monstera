<div class="h-full flex item-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <h2 class="text-center text-3xl font-bold mt-6">
      Register for an account
    </h2>

    <div class="mt-8">
      {% form 'create_customer' %}
        <!--show form erro-->
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3">
            <strong class="font-bold">Error</strong>
            <p class="block sm:inline">
              {{ form.errors | default_errors }}
            </p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="first_name" class="sr-only">Firt name</label>
          <input
            type="text"
            name="customer[first_name]"
            id="first_name"
            class="block w-full px-3 py-2 border"
            placeholder="First name">
        </div>

        <div class="my-2">
          <label for="last_name" class="sr-only">Firt name</label>
          <input
            type="text"
            name="customer[last_name]"
            id="last_name"
            class="block w-full px-3 py-2 border"
            placeholder="Last name">
        </div>

        <div class="my-2">
          <label for="birthday" class="sr-only">Birthdat</label>
          <input
            type="date"
            name="customer[note][birthday]"
            id="birthday"
            class="block w-full px-3 py-2 border">
        </div>

        <div class="my-2">
          <label for="email_address" class="sr-only">Firt name</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            class="block w-full px-3 py-2 border"
            placeholder="Email address">
        </div>


        <div class="my-2">
          <label for="password" class="sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            class="block w-full px-3 py-2 border"
            placeholder="Password">
        </div>

        <div class="my-2 text-sm">
          <button type="submit" class="w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
            Create account
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>