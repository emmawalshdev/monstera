<div class="flex flex-col my-8 items-center">
  <h1 class="text-3xl font-medium">
    {{ section.settings.title }}
  </h1>
  <div class="max-w-6xl mx-auto my-3">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
      {% for collection in collections %}
        <!-- if there are products in the collection..-->
        {% if collection.all_products_count > 0 %}
          <div class="w-full py-6 px-3">
            <div class="border bg-white overflow-hidden">
              <a href="{{ collection.url }}">
                <div class="h-8- overflow-hidden">
                  <!--get collection img-->
                  {% if collection.featured_image != blank %}
                    {% assign collection_image = collection.featured_image %}
                  {% else %}
                    {% assign collection_image = collection.products.first.image %}
                  {% endif %}
                  <img
                    src="{{ collection_image | image_url: 'medium' }}"
                    alt="{{ collection_title }}"
                    class="w-full object-cover h-full transition duration-1000 ease-in-out transform hover:scale-105">
                </div>
              </a>

              <div class="p-4 bg-gray-100">
                <h2 class="text-xl">
                  {{ collection.title }}
                </h2>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "Template List Collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Collection",
        "label": "Title"
      }
    ]
  }
{% endschema %}