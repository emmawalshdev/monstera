{
  "name": "project_workflow",
  "version": "1.1.0",
  "description": "Shopify workflow",
  "main": "index.js",
  "scripts": {
    "dev:postcss": "NODE_ENV=development TAILWIND_MODE=watch postcss src/css/{*.css,**/*.css} --dir ./assets --watch",
    "dev:rollup": "NODE_ENV=development rollup -c --watch",
    "build:postcss": "NODE_ENV=production postcss src/css/{*.css,**/*.css} --dir ./assets",
    "build:rollup": "NODE_ENV=production rollup -c"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browserslist": "^4.20.4",
    "jshint": "^2.13.6",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rollup": "^2.63.0",
    "rollup-plugin-babel": "^4.4.0"
  },
  "dependencies": {
    "@babel/core": "^7.14.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.17.9",
    "@jonathanmoore/rollup-plugin-copy": "^3.5.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^19.0.2",
    "@rollup/plugin-eslint": "^8.0.5",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^2.4.2",
    "@shopify/stylelint-plugin": "^11.0.1",
    "@shopify/theme-cart": "^4.1.1",
    "@shopify/theme-currency": "^4.1.1",
    "@shopify/theme-sections": "^4.1.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "canvas-confetti": "^1.4.0",
    "chokidar": "^3.5.3",
    "colorette": "^1.2.2",
    "core-js": "^3.21.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.0.1",
    "globby": "^11.0.4",
    "gulp": "^4.0.2",
    "is-plain-object": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-multi-input": "^1.3.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-watch": "^1.0.4",
    "stylelint": "^14.2.0",
    "stylelint-prettier": "^2.0.0",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.0.24",
    "update": "^0.7.4"
  },
  "babel": {
    "exclude": "node_modules/**",
    "presets": [
      [
        "@babel/env"
      ]
    ],
		"plugins": [
			["@babel/transform-runtime", {
				"regenerator": true
			}]
		]
  },
  "stylelint": {
		"extends": [
      "@shopify/stylelint-plugin/prettier"
    ],
    "rules": {
      "max-nesting-depth": 6,
      "selector-class-pattern": "[a-z][a-z0-9/-_]+",
      "selector-max-class": 5,
      "selector-max-combinators": 5,
      "selector-no-qualifying-type": false,
			"selector-max-specificity": "0,10,0",
			"selector-max-compound-selectors": 6
    }
  },
  "browserslist": "> 0.5%, last 3 versions, Firefox ESR, not dead",
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "tabWidth": 2,
    "useTabs": true
  }
}
